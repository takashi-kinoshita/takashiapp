<h3>スケジュール編集</h3>

<%= form_with model: @user do |f| %>
  <table>
    <tr>
      <th><%= f.label :title,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :start_at ,"開始日" %></th>
      <td><%= f.text_field :start_at %></td>
    </tr>

    <tr>
      <th><%= f.label :end_at,"終了日" %></th>
      <td><%= f.text_field :end_at %></td>
    </tr>

    <tr>
      <th><%= f.check_box :is_all_day %></th>
      <td><%= f.label :is_all_day,"終日の場合チェックしてください" %></td>
    </tr>

    <tr>
      <th><%= f.label :memo,"スケジュールメモ" %></th>
      <td><%= f.text_area :memo %></td>
    </tr>
  </table>


  <div>
    <ul>
      <li><%= f.submit "編集を完了する" %></li>
      <li><%= link_to "一覧に戻る", :users %></li>
    </ul>
  </div>
<% end %>