<h3>スケジュール詳細</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @user.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @user.start_at %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @user.end_at %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td><%= @user.is_all_day ? "○" : "" %></td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @user.memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "一覧に戻る", :users %></li>
    <li><%= link_to "編集", :edit_user%></li>
  </ul>
</div>